<%- include("./partial/header") %>
  <div class="container">
      <% if(message) { %>
        <div class="alert alert-danger" id="adjustment" style="position: sticky; top:12%; z-index: 99999;">
            <%= message %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
        </div> 
      <% } %>
        <form action="/user/login" method="POST">
          <div class="form-group col-md-5 m-auto">
            <label class="form-push" for="email">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="form-control" 
              placeholder="abc@gmail.com" 
              value="<%= typeof email != 'undefined' ? email : '' %>" 
            />
          </div>
          <div class="form-group col-md-5 m-auto">
            <label class="form-push1" for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Keep it secret!!">
          </div>
          <button type="submit" id="button-center" class="btn btn-success">Sign In</button>
        </form>
        <div class="pt-3 text-center">
          <small class="text-muted">
            Need An Account? <a class="ml-2" href="/user/register">Sign Up Now</a><br>
              <a href="" class="ml-2">Forgot Password?</a>
          </small>
        </div>
  </div>
  <%- include("./partial/footer") %>