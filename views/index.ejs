                                <a href="/brand/<%= task3.task1[i].companyName %>/<%= task3.task1[i].product_name %>">
                                    <h4><%= task3.task1[i].product_name %></h4>
                                    <a href="/brand/<%= task3.task1[i].companyName %>">
                                        <p><%= task3.task1[i].companyName %></p>
                                    </a>
                                </a>
                                <h6><i class="fas fa-rupee-sign"></i><%= task3.task1[i].product_price %></h6>
                            </div>
                        </a>
                        <button class="btn btn-block btn-success add-to-cart"
                            id="<%= task3.task1[i].product_pkg_id %>" 
                            data-name="<%= task3.task1[i].product_name %>"
                            data-price="<%= task3.task1[i].product_price %>"
                            data-weight="<%= task3.task1[i].product_weight_gram %>"
                            data-size="<%= task3.task1[i].product_size %>"
                            data-img="<%= task3.task1[i].product_img %>" 
                            value="<%= task3.task1[i].product_pkg_id %>" type="button">Add to cart
                        </button>
