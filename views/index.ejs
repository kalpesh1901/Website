                        <h2>Latest Products</h2>
                        <a href="/all_product">view all products <i class="fa fa-angle-right"></i></a>
                    </div>
                </div>
                <% for(i=0;i < task3.task1.length;i++){ %>
                <div class="col-md-4">
                    <div class="product-item">
                        <a href="/brand/<%= task3.task1[i].companyName %>/<%= task3.task1[i].product_name %>">
                            <img class="img-responsive" src="<%= task3.task1[i].product_img %>" alt="">
