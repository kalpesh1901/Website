<%- include("./partial/header") %>
    <!--Scroll Up Button -->
    <button onclick="topFunction()" id="myBtn" title="Go to top"><i class='fas fa-angle-double-up'></i></button>
    <!-- Page Content -->
    <div class=" page-heading contact-heading header-text">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-content">
                        <h4></h4>
                        <h2>
                            ALL OF OUR PRODUCT
                        </h2>
                    </div> 
                </div>
            </div>
        </div>
    </div>
    <div class="latest-products">
        <div class="container">
            <div class="row">
                <% for(i=0;i< result.length; i++ ){ %>
                    <div class="col-md-4">
                        <div class="product-item">
                            <a href="/brand/<%= result[i].companyName %>/<%= result[i].product_name %>">
                                <img class="img-responsive" src="<%= result[i].product_img %>" alt="<%= result[i].product_name %>">
                            </a>
                            <div class="down-content">
                                <a href="/brand/<%= result[i].companyName %>/<%= result[i].product_name %>">
                                    <h4><%= result[i].product_name %></h4>
                                    <a href="/brand/<%= result[i].companyName %>">
                                        <p><%= result[i].companyName %></p>
                                    </a>
                                </a>
                                <h6><i class="fas fa-rupee-sign"></i><%= result[i].product_price %></h6>
                            </div>
                            <button class="btn btn-block btn-success add-to-cart" 
                            id="<%= result[i].product_pkg_id %>" 
                            data-name="<%= result[i].product_name %>"
                            data-price="<%= result[i].product_price %>"
                            data-weight="<%= result[i].product_weight_gram %>"
                            data-size="<%= result[i].product_size %>"
                            data-img="<%= result[i].product_img %>"
                            value="<%= result[i].product_pkg_id %>" type="button" >Add to cart</button>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <!-- <script src="/js/infinity.js"></script> -->
    <%- include('./partial/footer') -%>