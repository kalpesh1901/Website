<%- include("./partial/header") -%>
<div class=" container account-section">
    <div class="col-lg-12">
        <div class="card shadow">
          <div class="card-header bg-white border-0">
            <div class="row align-items-center">
              <div class="col-8">
                <h3 class="mb-0">My account</h3>
              </div>
              <div class="col-4 text-right">
                <input type="button" id="edit" class="btn btn-sm btn-primary slide-toggle" value="Enable"/>
              </div>
            </div>
          </div>
          <div class="card-body">
            <form id="user-info" action="/account" method="POST">
              <h6 class="heading-small text-muted mb-4">User information</h6>
              <div class="pl-lg-4">
                <div class="row">
                  <div class="col-lg-6">
                    <div class="form-group focused">
                    
                      <label class="form-control-label" for="input-first-name">First name</label>
                      <input type="text" id="firstname" name="firstname" class="form-control form-control-alternative en" placeholder="First name"  value="<%= data.accountDetails.firstname %>">
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="form-group focused">
                      <label class="form-control-label" for="input-last-name">Last name</label>
                      <input type="text" id="lastname" name="lastname" class="form-control form-control-alternative en" placeholder="Last name"  value="<%= data.accountDetails.lastname %>">
                    </div>
                  </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                          <label class="form-control-label" for="input-email">Email address</label>
                          <input type="email" id="email" name="email" class="form-control form-control-alternative en"   value="<%= data.accountDetails.email %>">
                        </div>
                      </div>
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="mobilenumber">Mobile Number</label>
                        <input type="tel" id="mobilenumber" name="mobilenumber" class="form-control form-control-alternative en"  placeholder="Mobile Number" pattern="[0-9]{4}[0-9]{3}[0-9]{3}" value="<%= data.accountDetails.mobilenumber || mobilenumber %>">
                      </div>
                    </div>
                  </div>
              </div>
              <hr class="my-4">
              <!-- Address -->
              <h6 class="heading-small text-muted mb-4">Contact information</h6>
              <div class="pl-lg-4">
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group focused">
                      <label class="form-control-label" for="address1">Address</label>
                      <input id="address1" name="address1" class="form-control form-control-alternative en" placeholder="Home Address"  value="<%= data.accountDetails.address1 %>" type="text">
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group focused">
                      <label class="form-control-label" for="address2">Address2</label>
                      <input id="address2" name="address2" class="form-control form-control-alternative en" placeholder="Home Address"  value= "<%= data.accountDetails.address2 %>" type="text">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-3">
                    <div class="form-group focused">
                      <label class="form-control-label" for="country">Country</label>
                      <input type="text" id="country" name="country" class="form-control form-control-alternative " placeholder="Country"  value="<%= data.accountDetails.country %>">
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group"> 
                      <label class="form-control-label" for="zipcode">State</label>
                      <input type="text" id="state" name="state" class="form-control form-control-alternative en" value="<%= data.accountDetails.state %>">
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group focused">
                      <label class="form-control-label" for="city">City</label>
                      <input type="text" id="city" name="city" class="form-control form-control-alternative en" placeholder="City"  value="<%= data.accountDetails.city %>">
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <label class="form-control-label" for="zipcode">Postal code</label>
                      <input type="text" id="zipcode" name="zipcode" class="form-control form-control-alternative en" value="<%= data.accountDetails.zipcode %>">
                    </div>
                  </div>
                </div>
              </div>
              <hr class="my-4">
              <input type="submit" class="btn btn-sm btn-primary" value="Update"/>  
            </form>
          </div>
        </div>
        <div class="card shadow mt-4">
          <h3 class="mt-3 mb-3 ml-3">Orders</h3>
          <div class="row p-3">
            <% for(let i=0;i< data.orderDetails.length;i++){ %>
            <div class="col-sm-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex justify-content-around">
                    <p class="card-text ">Order ID</p>
                    <h5 class="card-title"><%= data.orderDetails[i].order_id %></h5>
                  </div>
                  <div class="d-flex justify-content-around">
                    <p class="card-text">Status</p>
                    <h5 class="card-title"><%= data.orderDetails[i].status %></h5>
                  </div>
                  <div class="d-flex justify-content-around">
                    <a href="/details/<%= data.orderDetails[i].order_id %>/<%= data.accountDetails.user_id %>" class="btn btn-primary">Details</a>
                  </div>
                  
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
</div>
<%- include("./partial/footer") -%>